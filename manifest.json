
{
  "manifest_version": 2,
  "name": "Hexxium Dev",
  "version": "1.1.2.1",
  "description": "A browser plugin to avoid scammer websites",
  "browser_action": {
	"default_icon": "png/20216216.png",
	"default_popup": "popup.html"
  },
   "content_scripts": [{
   "matches": ["<all_urls>"],
   "js": ["js/listener.js"],
   "run_at": "document_start"
   }],
     "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
    "permissions": [
    "activeTab",
	"tabs",
	"storage"
  ],
    "web_accessible_resources": [
	"cache/*",
	"config.json"
	]
}